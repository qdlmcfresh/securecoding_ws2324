{
    "name": "Chipwhisperer",
    "image": "ghcr.io/qdlmcfresh/securecoding_ws2324",
    "remoteEnv": {
        "CWFIRMWAREPATH": "/opt/chipwhisperer/chipwhisperer/hardware/victims/firmware"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "postCreateCommand": "pip3 install -r requirements.txt",
    "postAttachCommand": "",
    "runArgs": [
        "--privileged"
    ],
    "mounts": [
        "type=bind,source=/dev/bus/usb,target=/dev/bus/usb"
    ]
}